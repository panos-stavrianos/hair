<%= form.fields_for 'customer_products[]', CustomerProduct.new do |c| %>
  <%= c.select(:product_id, @products.collect {|p| [p, p.id]}, {include_blank: true},
               {class: 'selectpicker', 'data-live-search' => 'true'}) %>
  <%= datepicker_input(c, :created_at) %>
  <%= c.number_field :amount, label: 'Amount',
                     data: {toggle: 'tooltip'},
                     title: 'leave empty for one',
                     wrapper: {class: 'col-sm-6'} %>
  <%= c.number_field :price, label: 'Price',
                     class: :text_field,
                     step: :any,
                     data: {toggle: 'tooltip'},
                     title: 'leave empty for default price',
                     wrapper: {class: 'col-sm-6'} %>
  <%= c.text_field :comment, label: 'Comment' %>
<% end %>
<hr>

<script>
    $('.collapse').collapse();
    $('.selectpicker').selectpicker();
    $("input").tooltip();
    $('.input-group.date').datetimepicker({
        format: 'DD/M/YYYY HH:mm',
        locale: 'el',
        allowInputToggle: true,
        showClose: true
    });
</script>




