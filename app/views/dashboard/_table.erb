<div class="x_panel">
  <div class="x_content">
    <table id="datatable-customer_products" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Name</th>
        <th>Product</th>
        <th>Description</th>
        <th>Price</th>

      </tr>
      </thead>
      <tbody>
      <% @customer_products.each {|record| %>
        <tr>
          <%= row(record.customer.name) %>
          <%= row(record.product.name) %>
          <%= row(record.product.description) %>
          <%= record.price.blank? ? row(record.product.price) : row(record.price) %>
        </tr>
      <% } %>
      </tbody>
    </table>
  </div>
</div>

<script>
    $('#datatable-customer_products').DataTable();

</script>







