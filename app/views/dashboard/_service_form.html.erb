<%= form.fields_for 'customer_services[]', CustomerService.new do |c| %>
  <%= c.select(:service_id, @services.collect {|p| [p.name, p.id]}, {include_blank: true}, {class: 'selectpicker', 'data-live-search' => 'true'}) %>
  <%= c.number_field :amount, label: 'Amount', wrapper: {class: "col-sm-6"} %>
  <%= c.number_field :price, label: 'Price', wrapper: {class: "col-sm-6"} %>
  <%= c.text_field :comment, label: 'Comment' %>
<% end %>
<script>
    $('.collapse').collapse();
    $('.selectpicker').selectpicker();
</script>

