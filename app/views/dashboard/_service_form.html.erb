<%= form.fields_for 'customer_services[]', CustomerService.new do |c| %>
  <%= c.select(:service_id, @services.collect {|p| [p, p.id, data: {'price': p.price}]},
               {label: 'Επιλέξτε Υπηρεσία', :prompt => 'Δεν έχει επιλεγεί κάποια'},
               {class: 'selectpicker in_price', 'data-live-search' => 'true'}) %>
  <%= c.number_field :amount, label: 'Ποσότητα',
                     data: {toggle: 'tooltip'},
                     title: 'αφήστε κενό για ποσότητα ίση με ένα',
                     wrapper: {class: 'col-sm-6'} %>

  <%= c.number_field :price, label: 'Τιμή',
                     class: :text_field,
                     step: :any,
                     data: {toggle: 'tooltip'},
                     title: 'αφήστε κενό για την προκαθορισμένη τιμή',
                     wrapper: {class: 'col-sm-6'} %>
  <%= c.text_field :comment, label: 'Σχόλιο' %>
<% end %>
<hr>

<script>
    $('.collapse').collapse();
    $('.selectpicker').selectpicker();
    $("input").tooltip();
</script>