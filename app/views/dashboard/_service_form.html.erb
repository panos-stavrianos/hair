<%= form.fields_for 'customer_services[]', CustomerService.new do |c| %>
  <%= c.select(:service_id, @products.collect {|p| [p, p.id]},
               {label: 'Επιλέξτε Υπηρεσία', :prompt => 'Δεν έχει επιλεγεί κάποια'},
               {class: 'selectpicker form-control', 'data-live-search' => 'true'}) %>
  <%= datepicker_input(c, :created_at) %>
  <%= c.number_field :amount, label: 'Ποσότητα',
                     data: {toggle: 'tooltip'},
                     title: 'αφήστε κενό για ποσότητα ίση με ένα',
                     wrapper: {class: 'col-sm-6'} %>

  <%= c.number_field :price, label: 'Τιμή',
                     class: :text_field,
                     step: :any,
                     data: {toggle: 'tooltip'},
                     title: 'αφήστε κενό για την προκαθορισμένη τιμή',
                     wrapper: {class: 'col-sm-6'} %>
  <%= c.text_field :comment, label: 'Σχόλιο' %>
<% end %>
<hr>

<script>
    $('.collapse').collapse();
    $('.selectpicker').selectpicker();
    $("input").tooltip();
    $('.input-group.date').datetimepicker({
        format: 'DD/M/YYYY HH:mm',
        locale: 'el',
        allowInputToggle: true,
        showClose: true
    });
</script>