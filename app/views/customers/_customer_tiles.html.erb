<!-- top tiles -->
<div class="tile_count col-md-12 " id="tiles" style="display: none;">
  <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> Επισκέψεις - Μήνες</span>
    <div class="count blue"><%= @tiles[:visits].to_s + " - " + @tiles[:months_active].to_s %></div>
    <span class="count_bottom"><i class="green"><%= @tiles[:av_visits] %> </i> μ.ο. επισκέψεων ανά μήνα</span>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="glyphicon glyphicon-scissors"></i> Συνολικό κέρδος</span>
    <div class="count pink"><%= @tiles[:profit] %></div>
    <%= regular_tile(@tiles[:av_profit], 'μ.ο. ανά μήνα') %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="glyphicon glyphicon-ice-lolly"></i> Συνολικές Υπηρεσίες</span>
    <div class="count pink"><%= @tiles[:services] %></div>
    <%= regular_tile(@tiles[:av_services], 'μ.ο. ανά μήνα') %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="glyphicon glyphicon-ice-lolly"></i> Συνολικά Προϊόντα</span>
    <div class="count pink"><%= @tiles[:products] %></div>
    <%= regular_tile(@tiles[:av_products], 'μ.ο. ανά μήνα') %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="glyphicon glyphicon-ice-lolly"></i> Πρόβλεψη</span>
    <div class="count pink"><%= @tiles[:next_visit] %></div>
    <%= regular_tile(@tiles[:in_days], 'επομένη επίσκεψη') %>
  </div>
</div>
<!-- /top tiles -->
