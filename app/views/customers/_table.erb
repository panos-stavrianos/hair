<div class="x_panel">
  <div class="x_content">
    <table id="datatable-customers" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Όνομα</th>
        <th>Φύλο</th>
        <th>Τηλέφωνο 1</th>
        <th>Τηλέφωνο 2</th>
        <th>Σχόλιο</th>
        <th>Ενημέρωση</th>
        <th>Διαγραφή</th>
      </tr>
      </thead>
      <tbody>
      <% @records.each {|record| %>
        <tr>
          <%= row(record.name) %>
          <%= row(record.sex_to_s) %>
          <%= row(record.phone_1) %>
          <%= row(record.phone_2) %>
          <%= row(record.comment) %>
          <%= edit_row(edit_customer_path(record)) %>
          <%= delete_row(record) %>
        </tr>
      <% } %>
      </tbody>
    </table>
  </div>
</div>

<script>
    $('#datatable-customers').DataTable({
        "columnDefs": [
            {"width": "50px", "targets": [5, 6], "orderable": false, "className": "text-center"}
        ],
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Greek.json"
        }
    });
</script>
