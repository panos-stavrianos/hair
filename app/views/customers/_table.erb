<div class="x_panel">
  <div class="x_content">
    <table id="datatable-customers" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Name</th>
        <th>Phone 1</th>
        <th>Phone 2</th>
        <th>Comment</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      </thead>
      <tbody>
      <% @records.each {|record| %>
        <tr>
          <%= row(record.name) %>
          <%= row(record.phone_1) %>
          <%= row(record.phone_2) %>
          <%= row(record.comment) %>
          <%= edit_row(edit_customer_path(record)) %>
          <%= delete_row(record) %>
        </tr>
      <% } %>
      </tbody>
    </table>
  </div>
</div>

<script>
    $('#datatable-customers').DataTable({
        "columnDefs": [
            {"width": "50px", "targets": [4, 5], "orderable": false, "className": "text-center"}
        ]
    });
</script>
