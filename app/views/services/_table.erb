<div class="x_panel">
  <div class="x_content">
  <table id="datatable-services" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Όνομα</th>
      <th>Περιγραφή</th>
      <th>Τιμή</th>
      <th>Ενημέρωση</th>
      <th>Διαγραφή</th>
    </tr>
    </thead>
    <tbody>
    <% @records.each {|record| %>
      <tr>
        <%= row(record.name) %>
        <%= row(record.description) %>
        <%= row(record.price_in_euro) %>
        <%= row_with_link(edit_service_path(record)) %>
        <%= delete_row(record) %>
      </tr>
    <% } %>
    </tbody>
  </table>
</div>
</div>

<script>
    $('#datatable-services').DataTable({
        "columnDefs": [
            {"width": "50px", "targets": [3, 4], "orderable": false, "className": "text-center"}
        ],
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Greek.json"
        }
    });
</script>