<div class="x_panel">
  <div class="x_content">
  <table id="datatable-services" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    <% @records.each {|record| %>
      <tr>
        <%= row(record.name) %>
        <%= row(record.description) %>
        <%= row(record.price) %>
        <%= edit_row(edit_service_path(record)) %>
        <%= delete_row(record) %>
      </tr>
    <% } %>
    </tbody>
  </table>
</div>
</div>

<script>
    $('#datatable-services').DataTable({
        "columnDefs": [
            {"width": "50px", "targets": [3, 4], "orderable": false, "className": "text-center"}
        ]
    });
</script>