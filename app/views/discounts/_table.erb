<div class="x_panel">
  <div class="x_content">
    <table id="datatable-discounts" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Όνομα</th>
        <th>Επί τοις εκατό</th>
        <th>Ενεργος</th>
        <th>Ενημέρωση</th>
        <th>Διαγραφή</th>
      </tr>
      </thead>
      <tbody>
      <% @records.each {|record| %>
        <tr>
          <%= row(record.name) %>
          <%= row(record.per_cent) %>
          <%= enabled_row(toggle_enabled_discount_path(record), record.enabled) %>
          <%= edit_row(edit_discount_path(record)) %>
          <%= delete_row(record) %>
        </tr>
      <% } %>
      </tbody>
    </table>
  </div>
</div>

<script>
    $('#datatable-discounts').DataTable({
        "columnDefs": [
            {"width": "50px", "targets": [2, 3, 4], "orderable": false, "className": "text-center"}
        ],
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Greek.json"
        }
    });
</script>