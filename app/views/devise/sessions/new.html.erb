<div class="login_wrapper">
  <div class="animate form login_form">
    <section class="login_content">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h1>Συνδεθείτε</h1>

        <div class="field">
          <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: 'email', placeholder: 'Email' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autofocus: true, class: 'form-control', autocomplete: 'current-password', placeholder: 'Κωδικός' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field" id="remember_me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me  %>
          </div>
        <% end -%>

        <%= f.submit 'Σύνδεση', class: 'btn btn-default submit' %>
      <% end %>
      <div class="clearfix"></div>
      <div class="separator">

        <p class="change_link">Δεν έχετε λογαριασμό;
          <%= link_to 'Εγγραφή', new_registration_path(resource_name) %><br/>
        </p>
      </div>

    </section>
  </div>


</div>


