<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Ενημέρωση Προφίλ</h2>
        <div class="clearfix"></div>
      </div>
      <br class="x_content">
      <br/>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, class: "form-horizontal form-label-left"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="control-label col-md-3 col-sm-3 col-xs-12">
            <%= image_tag(current_user.avatar.url(:medium), class: "upload_avatar") %>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.file_field :avatar, class: "col-md-7 col-xs-12" %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label 'Όνομα χρήστη', class: "control-label col-md-3 col-sm-3 col-xs-12" %>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :username, value: current_user.username, class: "form-control col-md-7 col-xs-12" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.email_field :email, value: current_user.email, class: "form-control col-md-7 col-xs-12" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label 'Τωρινός κωδικός', class: "control-label col-md-3 col-sm-3 col-xs-12" %>
          <i style="margin-left: 10px;"> ( χρειαζόμαστε τον τωρινό σας κωδικό για να επιβεβαιώσουμε τις αλλαγές )</i>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.password_field :current_password, class: "form-control col-md-7 col-xs-12", autocomplete: "current-password" %>
          </div>
        </div>

        </br>
        <div class="form-group">
          <%= f.label 'Νέος κωδικός', class: "control-label col-md-3 col-sm-3 col-xs-12" %>
          <% if @minimum_password_length %>
            <i><%= @minimum_password_length %> χαρακτήρες το ελάχιστο</i>
          <% end %>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.password_field :password, autocomplete: :off, class: "form-control col-md-7 col-xs-12" %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label 'Επιβεβαίωση κωδικού', class: "control-label col-md-3 col-sm-3 col-xs-12" %>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.password_field :password_confirmation, class: "form-control col-md-7 col-xs-12" %>
          </div>
        </div>


        <div class="ln_solid"></div>
        <div class="form-group">
          <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <%= f.submit "Ενημέρωση", class: "btn btn-success" %>
            <%= link_to "Πίσω", :back, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>


    </div>
  </div>
</div>
</div>


